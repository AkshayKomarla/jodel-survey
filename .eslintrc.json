{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script"
  },
  "rules": {
    "import/no-extraneous-dependencies": 0,
    "complexity": ["warn", 10],
    "max-depth": ["warn", 3],
    "require-atomic-updates": 0,
    "undefined": 0,
    "no-plusplus": 0,
    "no-await-in-loop":"off",
    "no-param-reassign": "off"
  }
}
